
<div class="tab-content text-center" style="margin-top:10%">
  <div class="row" style="margin-left:10%">
    <% @articles.each do |article| %>
      <div class="col-sm-3 card "> 
        <%= article.title %>
        <%= link_to image_tag(article.image.url, :class => "imgsize"), article %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-12 " style="margin-left:-40%">
   <%= paginate @articles, :outer_window => 3 %>
  </div>
  <div class="col-sm-12 ">
   <%= link_to 'Back to home page', root_path, class: 'btn btn-primary'  %>
  </div>
</div>
