 <div class="container-fluid " style="margin: 2% 0 0 70%">
   <%= search_form_for @q do |f| %>
      <%= f.search_field :name_cont %>
      <%= f.submit %>
    <% end %>
 </div>
 <div class="tab-content text-center" style="margin:2% 1% 5% 1%">
    <h2 class="card container">Saint Dominic's Teachers from Nursery to Primary</h2>
     <p class="container">Would you like to know more about each teacher? click on him/her and read!</p>
    <div class="row" style="margin-left:10%">
     
    <% @teachers.each do |teacher| %>
     <div class="col-sm-3 card"> 
        <%= teacher.name %>
       
     </div>
    <% end %>
   </div>
   <div class="col-sm-12 " style="margin-left:-40%">
      <%= paginate @teachers, :outer_window => 3 %>
   </div>
    <div class="col-sm-12 " style="margin-left:1%">
      <%= page_entries_info @teachers %>
   </div>
   <div class="col-sm-12 ">
      <%= link_to 'Back to home page', root_path, class: 'btn btn-prymary'  %>
   </div>
</div>
