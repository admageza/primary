 
 <!-- Container (Contact Section) -->
<div  id="about" class="col-sm-12 row container-fluid bg-grey" style="max-width:1400px;margin-top:80px">
  <div class="col-sm-3 perfo">
     <div class="w3-card w3-round w3-white">
        <div class="w3-container">
         <h4 class="w3-center">My Profile</h4>
         <p class="w3-center"><%= link_to image_tag @user.image.url, :class => "profile" %></p>
         <% if @favorite.present? %>
           <h5 class="w3-center"><%= link_to 'dislike', favorite_path(user_id: @user.id), method: :delete, class: 'fa fa-thumb' %></h5>
         <% else %>
           <h5 class="w3-center"><%= link_to 'like', favorites_path(user_id: @user.id), method: :post, class: 'fa fa-heart' %></h5>
         <% end %>
         <hr>
         <i class="fa fa-pencil fa-fw w3-margin-right w3-text-theme"></i><%= @user.name %>
         <br>
         <i class="fa fa-envelope w3-margin-right w3-text-theme"></i> <%= @user.email %>
        </div>
        <div class="row">
           <div class="col-sm-6">
        <table>
            <% @user ||= current_user %>
          <div class="stats">
            <th><a href="<%= user_path(@user.id) %>">
              <strong id="followers" class="stat">
                <%= @user.following.count %>
              </strong>
                 Following
               </a>
              </th>
             </div>
            </table>
          </div>
          <div class="col-sm-6">
          <table>
            <% @user ||= current_user %>
          <div class="stats">
            <th><a href="<%= user_path(@user.id) %>">
              <strong id="followers" class="stat">
                <%= @user.followers.count %>
              </strong>
                 Followers
               </a>
            </th>
          </div>
          </table>
         </div>
      </div>
       </div>
      <br>
    <div class="w3-card w3-round w3-white">
      <div class="w3-container">
        <div class="col-sm-12" style="margin-top:10px">
         <h2 class="fa fa-pencil card container-fluid accordion">REGISTER YOUR CHILD</h2>
         <div class="panel">
           <p><%= link_to 'Register your CHILD', new_admission_path %></p>
           <p><%= link_to 'Check out Registered info', admissions_path %></p>
         </div>
        </div>
        <div class="col-sm-12">
         <h2 class="fa fa-thumbs-up card container-fluid accordion">FOLLOWED USER</h2>
          <div class="panel">
           <div class="row ">
              <% @user.following.each do |user| %>
                <div class="col-sm-12 perfo">
                  <div class="col-sm-6 perfo">
                    <%= link_to image_tag(user.image.url, :class => "user card"), user %>
                  </div>
                  <div class="col-sm-4 perfo">
                    <%= user.name %>
                  </div>
                </div>
              <% end %>
           </div>
          </div>
        </div>
         <div class="col-sm-12">
         <h2 class="fa fa-users card container-fluid accordion">MY FOLLOWERS</h2>
          <div class="panel">
           <div class="row ">
              <% @user.followers.each do |user| %>
                <div class="col-sm-12 perfo">
                  <div class="col-sm-6 perfo">
                    <%= link_to image_tag(user.image.url, :class => "user card"), user %>
                  </div>
                  <div class="col-sm-4 perfo">
                    <%= user.name %>
                  </div>
                </div>
              <% end %>
              
           </div>
          </div>
        </div>
      </div>
    </div>
      
    
    <!-- End Left Column -->
  </div>
    
    <!-- Middle Column -->
  <div class="w3-col m6">
    <div class="w3-row-padding">
      <div class="w3-col m12">
        <div class="w3-card w3-round w3-white">
          <div class="w3-container w3-padding">
            <div class="container">
              <p><b>Here's your Messages!</b></p>
              <% if @over_five %>
                  <%= link_to 'Previous messages', '?m=all' %>
                <% end %>
              <div class="row card">
              <div class="ui segment text-left">
                <% @messages.each do |message| %>
                 <% if message.body %>
                  <% user = User.find(message.user_id) %>
                   <div class="item">
                    <div class="content">
                     <div class="header">
                      <ul class="row col-sm-12">
                       <li class="col-sm-6 text-left"><strong><%= user.name %></strong></li>
                       <li class="col-sm-6 text-right"><strong><%= message.message_time %></strong></li>
                      </ul>
                     </div>
                     <div class="list">
                       <div class="item">
                         <ul class="row col-sm-12">
                           <i class="right triangle icon"></i>
                           <li class="col-sm-12"><%= message.body %></li>
                         </ul>
                       </div>
                     </div>
                    </div>
                   </div>
                  <% end %>
                <% end %>
              </div>
              <% if @user.id != current_user.id %>
                   <div class="item">
                     <%= link_to 'Message', conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: :post%>
                   </div>
               <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- End Middle Column -->
    </div>
    
    <!-- Right Column -->
    <div class="w3-col m3">
      <div class="w3-card w3-round w3-white w3-center">
        <div class="w3-container">
          <p>Upcoming Events:</p>
          <div class="card container-fluid">
            <% @publications.each do |publication| %>
              <h2><%= publication.title %></h2>
              <%= link_to image_tag(publication.image.url, :class => "public"), publication %>
              <%= publication.body %>
            <% end %>
    </div>
        </div>
      </div>
      <br>
      
      <div class="w3-card w3-round w3-white w3-center">
        <div class="w3-container">
          <h3>SUGGESTED FRIENDS</h3>
          <div class="row ">
              
              <% @users.each do |user| %>
                <div class="col-sm-12 perfo">
                  <div class="col-sm-4 perfo">
                    <%= link_to image_tag(user.image.url, :class => "list"), user %>
                  </div>
                  <div class="col-sm-3 perfo" style="margin-top:1%">
                    <%= user.name %>
                    <%= render 'follow_form', user: user %>
                  </div>
                  
                </div>
              <% end %>
             
           </div>
        </div>
      </div>
      <br>
      
      
    <!-- End Right Column -->
    </div>
    
  <!-- End Grid -->
  </div>
  
<!-- End Page Container -->
</div>
<br>


<script>
var acc = document.getElementsByClassName("accordion");
var i;

for (i = 0; i < acc.length; i++) {
  acc[i].addEventListener("click", function() {
    this.classList.toggle("active");
    var panel = this.nextElementSibling;
    if (panel.style.maxHeight){
      panel.style.maxHeight = null;
    } else {
      panel.style.maxHeight = panel.scrollHeight + "px";
    } 
  });
}
</script>
