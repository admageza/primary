<div class="tab-content text-center" style="margin-top:8%">
 <p><b>Would you like to message the following user? Choose one and start messaging</b></p>
   <div class="row ">
     <% @users.each do |user| %>
       <div class="col-sm-3 perfo">
         <div class="col-sm-4 perfo">
           <%= user.name %>
         </div>
         <div class="col-sm-12 perfo">
           <%= link_to image_tag(user.image.url, :class => "user card"), user %>
         </div>
         <div class="col-sm-12 perfo">
           <%= render 'follow_form', user: user %>
         </div>
       </div>
     <% end %>
   </div>
  <%= link_to 'Back to home page', root_path, class: 'btn btn-prymary'  %>
</div>

