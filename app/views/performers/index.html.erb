
<h1>Performers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @performers.each do |performer| %>
      <tr>
        <td><%= performer.title %></td>
        <td><%= image_tag performer.image_url, :class => "post" %></td>
        <td><%= performer.body %></td>
        <td><%= link_to 'Show', performer %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Performer', new_performer_path %>
