<div class="container-fluid " style="margin: 2% 0 0 70%">
   <%= search_form_for @q do |f| %>
      <%= f.search_field :FirstName_cont %>
      <%= f.submit %>
    <% end %>
</div>
<div class="tab-content text-center" style="margin:2% 1% 5% 1%">
<h1>Admissions</h1>
<% if logged_in? %>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Firstname</th>
      <th>Othername</th>
      <th>Firstname</th>
      <th>Dateofbirth</th>
      
      <th>Fathername</th>
      <th>Fatherid</th>
      <th>Fatherphone</th>
      <th>Mothername</th>
      <th>Motherid</th>
      <th>Motherphone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admissions.each do |admission| %>
      <tr>
      <% if admission.user == current_user %>
        <td><%= link_to image_tag(admission.image.url, :class => "admit"), admission %></td>
        <td><%= admission.FirstName %></td>
        <td><%= admission.OtherName %></td>
        <td><%= admission.FirstName %></td>
        <td><%= admission.DateOfBirth %></td>
        
        <td><%= admission.FatherName %></td>
        <td><%= admission.FatherId %></td>
        <td><%= admission.FatherPhone %></td>
        <td><%= admission.MotherName %></td>
        <td><%= admission.MotherId %></td>
        <td><%= admission.MotherPhone %></td>
        <td><%= link_to 'Show', admission %></td>
      
        <td><%= link_to 'Edit', edit_admission_path(admission) %></td>
        <td><%= link_to 'Destroy', admission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
   <% end %>
  </tbody>
   
</table>
 <div class="col-sm-12 " style="margin-left:-40%">
     <%= paginate @admissions, :outer_window => 3 %>
  </div>
   <div class="col-sm-12 " style="margin-left:1%">
      <%= page_entries_info @admissions %>
   </div>
    <% else %>
    <div class="col-sm-12 " style="margin-left:-40%">
    To see this, You have to Login first!
  </div>
<% end %>
</div>