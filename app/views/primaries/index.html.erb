<p id="notice"><%= notice %></p>

<h1>Primaries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @primaries.each do |primary| %>
      <tr>
        <td><%= primary.title %></td>
        <td><%= primary.body %></td>
        <td><%= primary.image %></td>
        <td><%= link_to 'Show', primary %></td>
        <td><%= link_to 'Edit', edit_primary_path(primary) %></td>
        <td><%= link_to 'Destroy', primary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

