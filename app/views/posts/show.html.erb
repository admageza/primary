
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @post.image_url, :class => "post" %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<% unless @post.admin_user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'Cancel favorites' favorite_path(post_id: @post.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'To favorite' favorites_path(post_id: @post.id), method: :post, class: 'btn btn-prymary' %>
  <% end %>
<% end %>

<p>Comment List</p>
  <div id="comments_area">
  <!-- render for displaying posted comments list in a post detail page -->
    <%= render partial: 'comments/index', locals: { comments: @comments, post: @post } %>
  </div>

  <!-- render for displaying comment entering field in a post detail page -->
  <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>

  
  <%= link_to 'Back', posts_path %>
</div>


