
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @post.image_url, :class => "post" %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>Comment List</p>
  <div id="comments_area">
  <!-- render for displaying posted comments list in a post detail page -->
    <%= render partial: 'comments/index', locals: { comments: @comments, post: @post } %>
  </div>

  <!-- render for displaying comment entering field in a post detail page -->
  <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>

  
  <%= link_to 'Back', posts_path %>
</div>


